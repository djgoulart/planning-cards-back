{
  "sourceMaps": "inline",
  "module": { 
    "type": "commonjs", "strictMode": true, "noInterop": true 
  },
  "jsc": {
    "externalHelpers": false,
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "decorators": false,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": false      
    },
    "keepClassNames": true,
    "paths": { "@/domain/*": [ "./src/domain/*" ] },
    "baseUrl": "."
  }
}